# set correct github linguist code detection
*.cpp   linguist-language=cpp
*.hpp   linguist-language=cpp
*.h     linguist-language=cpp

# set everything to auto except the following
* text=auto

# set .sh line endings to LF to avoid errors
*.sh text eol=lf

# source files
*.c     text diff=c
*.cc    text diff=cpp
*.cxx   text diff=cpp
*.cpp   text diff=cpp
*.c++   text diff=cpp
*.hpp   text diff=cpp
*.h     text diff=cpp
*.h++   text diff=cpp
*.hh    text diff=cpp

# python scripts
*.py    text diff=python

# compiled object files
*.o     binary
*.obj   binary

# precompiled headers
*.gch   binary
*.pch   binary

# dynamic libraries
*.so    binary
*.dylib binary
*.dll   binary

# static libraries
*.a     binary
*.lib   binary

# executables
*.exe   binary
*.out   binary
