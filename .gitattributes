# set correct github linguist code detection
*.cpp   linguist-language=cpp
*.hpp   linguist-language=cpp
*.h     linguist-language=cpp

# set everything to auto
* text=auto

# set .sh line endings to LF
*.sh text eol=lf

# set .bat and .cmd line endings to CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# set .svg line endings to LF
*.svg text eol=lf


# source files
*.c     text diff=c
*.cc    text diff=cpp
*.cxx   text diff=cpp
*.cpp   text diff=cpp
*.c++   text diff=cpp
*.hpp   text diff=cpp
*.h     text diff=cpp
*.h++   text diff=cpp
*.hh    text diff=cpp

# python scripts
*.py    text diff=python

# compiled object files
*.o     binary
*.obj   binary

# precompiled headers
*.gch   binary
*.pch   binary

# dynamic libraries
*.so    binary
*.dylib binary
*.dll   binary

# static libraries
*.a     binary
*.lib   binary

# executables
*.exe   binary
*.out   binary

# images
*.ai    binary
*.psd   binary
*.png   binary
*.jpg   binary
*.jpeg  binary
*.ttf   binary
*.gif   binary
*.ico   binary

# documents
*.pdf   binary

# compressed files
*.zip   binary
*.rar   binary
*.7z    binary
*.gz    binary
*.bz2   binary
